@import "tailwindcss";

/* Design Tokens - Tailwind CSS v4 */
@theme {
  /* Background Colors */
  --color-bg-primary: #0a0a0f;
  --color-bg-secondary: #12121a;
  --color-bg-tertiary: #1a1a25;
  --color-bg-hover: #222230;

  /* Text Colors */
  --color-text-primary: #f0f0f5;
  --color-text-secondary: #a0a0b0;
  --color-text-tertiary: #6b6b7b;

  /* Accent Colors */
  --color-accent-primary: #6366f1;
  --color-accent-hover: #818cf8;
  --color-accent-muted: #4f46e5;

  /* Semantic Colors */
  --color-success: #22c55e;
  --color-error: #ef4444;
  --color-warning: #f59e0b;
  --color-info: #3b82f6;

  /* Border Colors */
  --color-border-primary: #2a2a35;
  --color-border-secondary: #1f1f28;

  /* Premium Colors */
  --color-premium-gold: #fbbf24;

  /* Font Families */
  --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-display: 'Cal Sans', 'Inter', sans-serif;
  --font-mono: 'JetBrains Mono', 'Fira Code', monospace;

  /* Border Radius */
  --radius-sm: 0.25rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.5rem;
  --radius-full: 9999px;
}

/* Base Styles */
:root {
  /* Dark theme (default) */
  --background: #0a0a0f;
  --foreground: #f0f0f5;
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: var(--font-sans);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}

/* Focus visible styles */
:focus-visible {
  outline: 2px solid var(--color-accent-primary);
  outline-offset: 2px;
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--color-bg-secondary);
}

::-webkit-scrollbar-thumb {
  background: var(--color-border-primary);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-tertiary);
}

/* Selection */
::selection {
  background: var(--color-accent-primary);
  color: white;
}

/* Light theme (optional toggle) */
[data-theme="light"] {
  --background: #fafafa;
  --foreground: #1a1a1a;
  --color-bg-primary: #fafafa;
  --color-bg-secondary: #ffffff;
  --color-bg-tertiary: #f5f5f5;
  --color-bg-hover: #eeeeee;
  --color-text-primary: #1a1a1a;
  --color-text-secondary: #6b7280;
  --color-text-tertiary: #9ca3af;
  --color-border-primary: #e5e5e5;
  --color-border-secondary: #f0f0f0;
}

/* Animations */
@keyframes slide-in-right {
  from {
    transform: translateX(100%);
    opacity: 0;
  }

  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes fade-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes fade-out {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}

/* Animation utility classes */
.animate-slide-in-right {
  animation: slide-in-right 0.3s ease-out;
}

.animate-fade-in {
  animation: fade-in 0.2s ease-out;
}

.animate-fade-out {
  animation: fade-out 0.2s ease-out;
}

/* ========================================
   INSTANT APP-LIKE MODAL TRANSITIONS
   ======================================== */

/* GPU-accelerated modal slide-in */
.modal-slide-enter {
  animation: modal-slide-in 150ms cubic-bezier(0.16, 1, 0.3, 1) forwards;
  will-change: transform, opacity;
  transform: translateZ(0);
}

@keyframes modal-slide-in {
  from {
    transform: translateX(100%);
    opacity: 0.8;
  }

  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Instant fade for overlays */
.overlay-fade {
  animation: overlay-fade-in 100ms ease-out forwards;
}

@keyframes overlay-fade-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* Content section entrance animation */
.home-section {
  animation: content-fade-in 200ms ease-out forwards;
  scroll-margin-top: 80px;
}

@keyframes content-fade-in {
  from {
    opacity: 0;
    transform: translateY(8px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Hero showcase image crossfade */
.hero-image-active {
  opacity: 1;
  transform: scale(1.02);
}

.hero-image-inactive {
  opacity: 0;
  transform: scale(1);
}

/* ========================================
   CREATIVE MICRO-INTERACTIONS
   ======================================== */

/* 3D tilt perspective on wallpaper cards */
.card-3d {
  perspective: 800px;
  transform-style: preserve-3d;
}

.card-3d-inner {
  transition: transform 0.3s cubic-bezier(0.17, 0.67, 0.35, 1.2);
  transform-style: preserve-3d;
  will-change: transform;
}

.card-3d:hover .card-3d-inner {
  transform: rotateY(-4deg) rotateX(2deg) scale(1.02);
}

/* Heart burst particle animation */
.heart-burst {
  position: relative;
}

.heart-burst::after {
  content: '';
  position: absolute;
  inset: -4px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(239, 68, 68, 0.4) 0%, transparent 70%);
  animation: heart-burst-ring 0.5s cubic-bezier(0.17, 0.67, 0.35, 1.5) forwards;
  pointer-events: none;
}

@keyframes heart-burst-ring {
  0% {
    transform: scale(0.5);
    opacity: 1;
  }

  100% {
    transform: scale(2.5);
    opacity: 0;
  }
}

/* Heart pop scale */
@keyframes heart-pop {
  0% {
    transform: scale(1);
  }

  25% {
    transform: scale(1.35);
  }

  50% {
    transform: scale(0.9);
  }

  75% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1);
  }
}

.heart-pop {
  animation: heart-pop 0.45s cubic-bezier(0.17, 0.67, 0.35, 1.5);
}

/* Glassmorphism for centered modal */
.glass-modal {
  background: rgba(10, 10, 15, 0.85);
  backdrop-filter: blur(24px) saturate(1.6);
  -webkit-backdrop-filter: blur(24px) saturate(1.6);
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow:
    0 0 0 1px rgba(255, 255, 255, 0.04),
    0 24px 48px rgba(0, 0, 0, 0.4),
    0 0 120px rgba(99, 102, 241, 0.06);
}

/* Glassmorphism backdrop */
.glass-backdrop {
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

/* Gradient glow pulse on accent elements */
.glow-accent {
  box-shadow: 0 0 20px rgba(99, 102, 241, 0.15);
  transition: box-shadow 0.3s ease;
}

.glow-accent:hover {
  box-shadow:
    0 0 20px rgba(99, 102, 241, 0.3),
    0 0 40px rgba(99, 102, 241, 0.1);
}

/* Gradient glow for premium crown */
.glow-gold {
  filter: drop-shadow(0 0 8px rgba(251, 191, 36, 0.4));
  transition: filter 0.3s ease;
}

.glow-gold:hover {
  filter: drop-shadow(0 0 12px rgba(251, 191, 36, 0.6));
}

/* Staggered entrance for grid children */
.stagger-grid>* {
  opacity: 0;
  animation: stagger-enter 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

.stagger-grid>*:nth-child(1) {
  animation-delay: 0ms;
}

.stagger-grid>*:nth-child(2) {
  animation-delay: 50ms;
}

.stagger-grid>*:nth-child(3) {
  animation-delay: 100ms;
}

.stagger-grid>*:nth-child(4) {
  animation-delay: 150ms;
}

.stagger-grid>*:nth-child(5) {
  animation-delay: 200ms;
}

.stagger-grid>*:nth-child(6) {
  animation-delay: 250ms;
}

.stagger-grid>*:nth-child(7) {
  animation-delay: 300ms;
}

.stagger-grid>*:nth-child(8) {
  animation-delay: 350ms;
}

.stagger-grid>*:nth-child(n+9) {
  animation-delay: 400ms;
}

@keyframes stagger-enter {
  from {
    opacity: 0;
    transform: translateY(16px) scale(0.97);
  }

  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Hero "TOP" badge pulse */
.badge-pulse {
  animation: badge-glow 3s ease-in-out infinite alternate;
}

@keyframes badge-glow {
  from {
    box-shadow: 0 0 8px rgba(99, 102, 241, 0.2), inset 0 0 8px rgba(99, 102, 241, 0.05);
  }

  to {
    box-shadow: 0 0 20px rgba(99, 102, 241, 0.35), inset 0 0 12px rgba(99, 102, 241, 0.1);
  }
}

/* Enhanced shimmer skeleton */
.shimmer {
  position: relative;
  overflow: hidden;
  background: var(--color-bg-tertiary);
}

.shimmer::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.04) 40%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.04) 60%,
      transparent 100%);
  animation: shimmer-slide 1.8s ease-in-out infinite;
  transform: translateX(-100%);
}

@keyframes shimmer-slide {
  100% {
    transform: translateX(100%);
  }
}

/* Modal scale entrance for centered modals */
@keyframes modal-scale-in {
  from {
    opacity: 0;
    transform: scale(0.92) translateY(8px);
  }

  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-scale-enter {
  animation: modal-scale-in 200ms cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

/* Subtle float animation for hero images */
@keyframes subtle-float {

  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-4px);
  }
}

.hero-float {
  animation: subtle-float 4s ease-in-out infinite;
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {

  .modal-slide-enter,
  .overlay-fade,
  .home-section,
  .stagger-grid>*,
  .badge-pulse,
  .hero-float,
  .modal-scale-enter {
    animation-duration: 0.01ms !important;
  }

  .card-3d:hover .card-3d-inner {
    transform: none;
  }

  .shimmer::after {
    animation: none;
  }
}